---
import BaseLayout from "@layouts/base-layout.astro";

const headlineArticle = (await Astro.glob("./blog/tutorial/leverage-agile-frameworks.md"))[0].frontmatter
const articles = await Astro.glob("./blog/**/*.md")
---

<BaseLayout>
  <div class="container-1100 mx-auto p-10 pt-4 md:px-0">
    <div class="flex justify-between items-center flex-wrap md:flex-nowrap mb-10">
      <div><img src={headlineArticle.image} /></div>
      <div class="space-y-12">
        <div class="text-center p-5 pb-0 md:pl-10 md:pr-0 space-y-5">
          <div class="uppercase font-semibold">{headlineArticle.category}</div>
          <div class="text-5xl font-bold">{headlineArticle.title}</div>
          <div class="text-lg">{headlineArticle.description}</div>
        </div>
        <div class="flex justify-center"><a href={headlineArticle.url} class="font-bold border px-5 py-2 rounded bg-black text-white md:ml-12">Read Article</a></div>
      </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-5">
      {articles.map((article: any, i: number) => (
        <a href={article.url}>
          <article class="grid grid-cols-4 gap-5">
            <div class="col-span-3 space-y-1">
              <h1 class="text-xl font-bold">{article.frontmatter.title}</h1>
              <h3 class="text-sm text-gray-500">{article.frontmatter.description}</h3>
              <div class="text-xs capitalize text-gray-500">{article.frontmatter.category}</div>
            </div>
            <div class="bg-cover bg-center" style={`width: 80px; height: 80px; background-image: url(${article.frontmatter.image});`}></div>
          </article>
        </a>
      ))}
    </div>
  </div>
</BaseLayout>