---
import { SiteConfig } from "@commons/config";
import { BlogPrimaryMenu, IBlogMenu } from "@commons/blog/menu";
---

<div class="px-10 md:px-0 py-4 border-b">
  <div class="container-1100 mx-auto flex justify-between items-center">
    <div>
      <a href="/" class="font-bold text-xl block">{SiteConfig.title}</a>
      {SiteConfig.isShowDescription &&
        <div class="text-sm">{SiteConfig.description}</div>
      }
    </div>
    <div class="flex space-x-10">
      {BlogPrimaryMenu.map((menu: IBlogMenu, i: number) => (
        <a href={menu.path}>{menu.label}</a>
      ))}
    </div>
  </div>
</div>